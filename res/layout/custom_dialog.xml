<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_margin="15dip"
    android:padding="10dip"
    android:layout_height="match_parent" >
    
    <TextView 
        android:id="@+id/dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/title_bar_bg"
        android:gravity="left"
        android:textSize="20dip"
        android:text="ssssssssssssss"
        />
    <EditText 
        android:layout_marginTop="15dip"
        android:id="@+id/dialog_room_input"
        android:layout_below="@id/dialog_title"
        android:hint="room id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#343420"
        android:inputType="number"
        
        />
    <Button 
        android:layout_marginTop="15dip"
        android:id="@+id/dialog_Cancle_btn"
        android:layout_height="30dip"
        android:layout_width="50dip"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:textColor="#FF5161"
        android:textSize="15dp"
        android:background="@drawable/button_selector"
        android:layout_below="@id/dialog_room_input"
        android:text="Cancel"
        />
        <Button 
        android:layout_marginTop="15dip"
        android:id="@+id/dialog_Send_btn"
        android:gravity="center"
        android:layout_toLeftOf="@id/dialog_Cancle_btn"
        android:layout_height="30dip"
        android:layout_marginRight="15dip"
        android:layout_width="80dip"
        android:textColor="#0080ff"
        android:textSize="15dp"
        android:background="@drawable/button_selector"
        android:layout_below="@id/dialog_room_input"
        android:text="Connect"
        />
    

</RelativeLayout>
